@{
    Layout = null;
}
@model ClientsApp.Models.Login

@{ ViewBag.Title = "Truck Easy Moving - Clients Area"; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name=”robots” content=”noindex,nofollow”>
    <meta name="theme-color" content="#563d7c">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    <style type="text/css">

        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        form {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            form .checkbox {
                font-weight: 400;
            }

            form .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
            }

                form .form-control:focus {
                    z-index: 2;
                }

            form input[type="text"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }

            ul li {
                list-style-type: none;
            }

</style>
</head>
<body class="text-center">

    @using (Html.BeginForm())
    {

        <img src="/Content/Images/truck-easy-logo.png" width="80">
        <h1 class="h3 mb-3 font-weight-normal">Clients Area</h1>
        @Html.LabelFor(model => model.phoneNumber) <small>(only numbers)</small><br />
        <small class="text-danger">
            @Html.ValidationMessageFor(model => model.phoneNumber)
        </small>
        @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control" } })

        @Html.LabelFor(model => model.orderNumber) <small>(#)</small><br />
        <small class="text-danger">
            @Html.ValidationMessageFor(model => model.orderNumber)
        </small>
        @Html.EditorFor(model => model.orderNumber, new { htmlAttributes = new { @class = "form-control" } })

        <small class="text-danger">
            @Html.ValidationSummary(true)<br />
        </small>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>

        <footer class="footer mt-auto py-3">
            <div class="container">
                <span class="text-muted"><small>&copy; 2020 - Truck Easy Moving & Services</small></span>
            </div>
        </footer>

    }


    <form action="/SMS/InboundSms" method="post">
        <input type="hidden" name="Body" value="asdasdasdasdasdasd" />
        <input type="submit" value="Submit" />
    </form>


    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")

</body>
</html>
